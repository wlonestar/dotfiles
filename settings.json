{
  "workbench.colorTheme": "Default Light Modern",
  "workbench.iconTheme": "material-icon-theme",
  "editor.tabSize": 2,
  "editor.rulers": [80, 120],
  "editor.detectIndentation": false,
  "editor.parameterHints.enabled": false,
  "editor.inlineSuggest.enabled": true,
  "editor.fontSize": 17,
  "editor.fontFamily": "Maple Mono NF, FiraCode Nerd Font, Consolas, Courier New, monospace",
  "editor.fontLigatures": "'calt', 'cv01', 'ss01', 'zero'",
  "editor.defaultFormatter": "xaver.clang-format",
  "editor.formatOnSave": true,
  "editor.fontVariations": true,
  "editor.unicodeHighlight.allowedLocales": {
    "zh-hans": true
  },
  "editor.experimentalEditContextEnabled": false,
  "terminal.integrated.fontSize": 17,
  "terminal.integrated.fontFamily": "Maple Mono NF, FiraCode Nerd Font, Consolas, Courier New, monospace",
  "terminal.integrated.fontLigatures.enabled": true,
  "terminal.integrated.fontLigatures.featureSettings": "'calt', 'cv01', 'ss01', 'zero'",
  "[c]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[rust]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "[typst]": {
    "editor.defaultFormatter": "myriad-dreamin.tinymist"
  },
  "window.autoDetectColorScheme": true,
  "window.restoreWindows": "none",
  "files.autoSave": "afterDelay",
  "files.autoGuessEncoding": true,
  "git.openRepositoryInParentFolders": "never",
  "git.autofetch": true,
  "git.ignoreMissingGitWarning": true,
  "debug.console.fontSize": 18,
  "security.workspace.trust.untrustedFiles": "open",
  "http.proxyAuthorization": null,
  "extensions.ignoreRecommendations": true,
  "explorer.confirmDragAndDrop": false,
  "code-runner.runInTerminal": true,
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-c>": false,
    "<C-f>": false,
    "<C-s>": false,
    "<C-v>": false,
    "<C-x>": false,
    "<C-z>": false
  },    
  "remote.forwardOnOpen": false,
  "remote.autoForwardPortsSource": "hybrid",
  "remote.SSH.remotePlatform": {
    "129.226.185.188": "linux",
    "114.212.189.33": "linux",
    "114.212.86.2": "linux",
    "114.212.82.109": "linux"
  },
  "C_Cpp.formatting": "clangFormat",
  "C_Cpp.intelliSenseEngine": "disabled",
  "C_Cpp.default.cStandard": "c23",
  "C_Cpp.default.cppStandard": "c++23",
  "latex-workshop.latex.tools": [
    {
      "name": "xelatex",
      "command": "xelatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ]
    },
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "%DOC%"
      ]
    },
    {
      "name": "bibtex",
      "command": "bibtex",
      "args": [
        "%DOCFILE%"
      ]
    }
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "xelatex -> bibtex -> xelatex*2",
      "tools": [
        "xelatex",
        "bibtex",
        "xelatex",
        "xelatex"
      ]
    },
    {
      "name": "xelatex",
      "tools": [
        "xelatex"
      ]
    }
  ],
  "notebook.lineNumbers": "on",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "cmake.configureOnOpen": false,
  "cmake.configureOnEdit": false,
  "cmake.pinnedCommands": [
    "workbench.action.tasks.configureTaskRunner",
    "workbench.action.tasks.runTask"
  ],
  "clangd.onConfigChanged": "restart",
  "clangd.inactiveRegions.useBackgroundHighlight": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "gitlens.graph.minimap.enabled": false,
  "gitlens.graph.minimap.dataType": "lines",
  "gitlens.graph.onlyFollowFirstParent": true,
  "gitlens.gitCommands.skipConfirmations": [
    "fetch:command",
    "stash-push:command",
    "switch:command"
  ],
  "github.copilot.nextEditSuggestions.enabled": true,
}
